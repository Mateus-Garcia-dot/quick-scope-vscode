{
  "name": "quick-scope-vscode",
  "publisher": "MateusGarcia",
  "displayName": "quick-scope-vscode",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mateus-Garcia-dot/quick-scope-vscode"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onDidChangeActiveTextEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "quick-scope-vscode.triggerFind",
        "title": "Quick Scope: Find Forward (f)"
      },
      {
        "command": "quick-scope-vscode.triggerFindBackward",
        "title": "Quick Scope: Find Backward (F)"
      },
      {
        "command": "quick-scope-vscode.triggerTill",
        "title": "Quick Scope: Till Forward (t)"
      },
      {
        "command": "quick-scope-vscode.triggerTillBackward",
        "title": "Quick Scope: Till Backward (T)"
      }
    ],
    "keybindings": [
      {
        "command": "quick-scope-vscode.triggerFind",
        "key": "f",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
      },
      {
        "command": "quick-scope-vscode.triggerFindBackward",
        "key": "shift+f",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
      },
      {
        "command": "quick-scope-vscode.triggerTill",
        "key": "t",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
      },
      {
        "command": "quick-scope-vscode.triggerTillBackward",
        "key": "shift+t",
        "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Quick Scope Settings",
      "properties": {
        "quickScope.activationMode": {
          "type": "string",
          "enum": [
            "always",
            "onKeyPress"
          ],
          "enumDescriptions": [
            "Always show highlights in Normal/Visual mode",
            "Only show highlights when pressing f/F/t/T"
          ],
          "default": "always",
          "description": "When to show Quick Scope highlights"
        },
        "lineChangeHighlight.firstColor": {
          "type": "string",
          "default": "#00FF00",
          "description": "The color of the first letter to jump"
        },
        "lineChangeHighlight.secondColor": {
          "type": "string",
          "default": "#0000FF",
          "description": "The color of the second letter to jump"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
